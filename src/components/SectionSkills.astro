---
import BaseSection from "./BaseSection.astro";
import BaseCard from "./BaseCard.astro";
import SocialIconsBase from "./SocialIconsBase.astro";
import ChipRiver from "./ChipRiver.astro";

import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const skills = [
  {
    name: "Frontend",
    icon: "mdiCodeTags",
    description: "frontendDescription",
    technologies: [
      "HTML5",
      "CSS3",
      "SCSS",
      "Tailwind",
      "Vuetify",
      "Javascript",
      "Typescript",
      "Vue.js",
      "Astro",
      "Nuxt",
      "React",
      "Next.js",
    ],
  },
  {
    name: "Backend",
    icon: "mdiServer",
    description: "backendDescription",
    technologies: [
      "Javascript",
      "PHP",
      "Node.js",
      "Express.js",
      "Laravel",
      "Nuxt",
      "Next.js",
      "Astro",
    ],
  },
  {
    name: "Database",
    icon: "mdiDatabase",
    description: "databaseDescription",
    technologies: ["MariaDB", "MySQL", "PostgreSQL"],
  },
  {
    name: "Cloud",
    icon: "mdiCloud",
    description: "cloudDescription",
    technologies: ["Firebase"],
  },
  {
    name: "Testing",
    icon: "mdiBug",
    description: "testingDescription",
    technologies: ["Jest", "Vitest"],
  },
  {
    name: "Languages",
    icon: "mdiTranslate",
    description: "languagesDescription",
    technologies: ["English", "Espa√±ol"],
  },
];
---

<BaseSection
  class="flex flex-col max-w-3xl mx-auto gap-5"
  title={t("skills")}
  titleAlignment="text-center"
  id="skills"
>
  {
    skills.map((skill) => (
      <BaseCard class="bg-secondary">
        <div class="flex p-0 md:p-3">
          <div>
            <SocialIconsBase
              height="100px"
              width="100px"
              class="w-20 md:w-32 color-primary"
              icon={skill.icon}
            />
          </div>

          <div class="ml-5">
            <h3 class="font-semibold text-2xl">{skill.name}</h3>
            <p>{t(skill.description)}</p>
            <ChipRiver values={skill.technologies} class="mt-2" />
          </div>
        </div>
      </BaseCard>
    ))
  }
</BaseSection>
