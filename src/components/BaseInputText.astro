---
const { label, class: classes } = Astro.props;
---

<div class="flex flex-col" class:list={classes}>
  <label for={label}>{label}</label>
  <input id={label} v-model="text" class="p-1 rounded outline-none mt-0 text" />
</div>

<script></script>

<style scoped>
  .text {
    color: var(--text-color-gray-900);
    transition: all 0.1s;
    --shadow-color: #9ca3af;
    box-shadow: 6px 6px 0px 1px var(--shadow-color);
  }

  .text:focus {
    transform: translate(2px, 2px);
    box-shadow: 4px 4px 0px 1px var(--shadow-color);
  }
</style>
