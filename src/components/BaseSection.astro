---
const { title, titleAlignment, id, class: classes } = Astro.props;

const titleAlignmentDepurated = titleAlignment ?? "self-start sm:self-center";
---

<section class="my-32 p-3" class:list={classes} id={id}>
  {
    title && (
      <h2 class="mb-3 text-3xl text-5xl" class:list={titleAlignmentDepurated}>
        {title}
      </h2>
    )
  }
  <slot />
</section>
