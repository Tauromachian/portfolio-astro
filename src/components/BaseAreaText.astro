---
const { label, required, class: classes } = Astro.props;
---

<div class="flex flex-col" class:list={classes}>
  <label for={label}>{label}</label>
  <textarea
    id={label}
    required={required}
    v-model="text"
    class="p-1 rounded outline-none shadow shadow--press"
    cols="10"
    rows="4"
    v-bind="attrs"
  >
  </textarea>
</div>
